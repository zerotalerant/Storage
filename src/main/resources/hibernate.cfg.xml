<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5433/postgres</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">master</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <property name="show_sql">true</property>
        <mapping class="Entities.User"/>
        <mapping class="Entities.Teacher"/>
        <mapping class="Entities.Subscribers"/>
        <mapping class="Entities.Subscribe"/>
        <mapping class="Entities.Lessons"/>
    </session-factory>
</hibernate-configuration>